{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "plugins": ["local-rules"],
  "settings": {
    "import/resolver": {}
  },
  "rules": {
    "local-rules/no-direct-sonner": "error",
    "@typescript-eslint/no-explicit-any": "warn"
  },
  "overrides": [
    {
      "files": ["lib/notifications/**/*"],
      "rules": { "@typescript-eslint/no-explicit-any": "off" }
    }
  ]
}
