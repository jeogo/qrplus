{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "plugins": [],
  "settings": {
    "import/resolver": {}
  },
  "rules": {
    "no-restricted-imports": ["error", { "paths": [{ "name": "sonner", "message": "Use notify facade instead of direct sonner import" }] }],
    "@typescript-eslint/no-explicit-any": "warn"
  },
  "overrides": [
    {
      "files": ["lib/notifications/**/*"],
      "rules": { "@typescript-eslint/no-explicit-any": "off" }
    },
    {
      "files": ["components/ui/sonner.tsx", "lib/notifications/adapters/sonner.ts"],
      "rules": { "no-restricted-imports": "off" }
    }
  ]
}
